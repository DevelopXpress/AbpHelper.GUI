@using EasyAbp.AbpHelper.Gui.Localization
@using EasyAbp.AbpHelper.Gui.AbpCli.Build.Dtos;
@using EasyAbp.AbpHelper.Gui.Pages.Shared;
@inherits ExecutableComponentBaseWithDirectory<AbpBuildInput>
@inject AbpBlazorMessageLocalizerHelper<GuiResource> Lh

<Card Class="mb-4">
    <CardBody>
        <Form>
            <Validation MessageLocalizer="@Lh.Localize">
                <Field>
                    <FieldLabel>@L["Directory"]</FieldLabel>
                    <TextEdit @bind-Text="Input.Directory">
                        <Feedback>
                            <ValidationError />
                        </Feedback>
                    </TextEdit>
                </Field>
            </Validation>
            <Validation MessageLocalizer="@Lh.Localize">
                <Field>
                    <FieldLabel>@L["AbpCli_Build:BuildName"]</FieldLabel>
                    <TextEdit @bind-Text="Input.BuildName">
                        <Feedback>
                            <ValidationError/>
                        </Feedback>
                    </TextEdit>
                </Field>
            </Validation>
            <Validation MessageLocalizer="@Lh.Localize">
                <Field>
                    <FieldLabel>@L["AbpCli_Build:DotnetBuildArguments"]</FieldLabel>
                    <TextEdit @bind-Text="Input.DotnetBuildArguments">
                        <Feedback>
                            <ValidationError/>
                        </Feedback>
                    </TextEdit>
                </Field>
            </Validation>
            <Field>
                <Check TValue="bool" @bind-Checked="@Input.Force">@L["AbpCli_Build:Force"]</Check>
            </Field>

            <SubmitButton Block="true" Clicked="@ExecuteAsync"/>
        </Form>
    </CardBody>
</Card>