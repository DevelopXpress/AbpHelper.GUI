@page "/"
@namespace EasyAbp.AbpHelper.Gui.Blazor.Pages
@inject ILogAppService LogAppService
@using System.Globalization
@using EasyAbp.AbpHelper.Gui.LogService
@using Microsoft.JSInterop
@using Volo.Abp.AspNetCore.Components.Server.BasicTheme.Bundling
@using Volo.Abp.AspNetCore.Components.Web.BasicTheme.Themes.Basic
@using Volo.Abp.Localization

@{
    Layout = null;
    var rtl = CultureHelper.IsRtl ? "rtl" : string.Empty;

    async Task<object> GetRecentErrorLogFilePathAsync()
    {
        return (await LogAppService.GetRecentErrorLogFilePathAsync()).Replace("\\", "\\\\");
    }
}

<script>
    function openErrorLogFile() {
        window.open('@await GetRecentErrorLogFilePathAsync()', '_blank');
    }
</script>

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name" dir="@rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EasyAbp.AbpHelper.Gui.Blazor</title>
    <base href="~/" />
    
    <abp-style-bundle name="@BlazorBasicThemeBundles.Styles.Global" />
</head>
<body class="abp-application-layout bg-light @rtl">
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <button onclick="openErrorLogFile()">Show logs</button>
        <a class="dismiss">🗙</a>
    </div>

    <abp-script-bundle name="@BlazorBasicThemeBundles.Scripts.Global" />
    <script src="_content/Blazor-Analytics/blazor-analytics.js"></script>
</body>
</html>
